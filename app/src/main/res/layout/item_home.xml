<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background"


    card_view:cardCornerRadius="1dp"
    card_view:contentPadding="1dp"
        >
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background"
        android:padding="@dimen/padding_standard"
        >
        <ImageView
            android:layout_width="@dimen/img_size"
            android:layout_height="@dimen/img_size"
            android:id="@+id/item_home_img"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_placeholder"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Menu Name"
            android:id="@+id/item_home_title"
            android:textColor="@android:color/white"

            android:layout_alignTop="@+id/item_home_img"
            android:layout_toRightOf="@+id/item_home_img"
            android:layout_toEndOf="@+id/item_home_img" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Medium Text"
            android:id="@+id/item_home_date"
            android:layout_below="@+id/item_home_title"
            android:layout_alignLeft="@+id/item_home_title"
            android:layout_alignStart="@+id/item_home_title"

            android:textColor="@android:color/white"
           />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Adult"
            android:id="@+id/item_home_adult"
            android:layout_below="@+id/item_home_date"
            android:layout_toRightOf="@+id/item_home_img"
            android:layout_toEndOf="@+id/item_home_img"
            android:padding="5dp"
            android:textColor="@android:color/white"/>


    </RelativeLayout>
    </android.support.v7.widget.CardView>
